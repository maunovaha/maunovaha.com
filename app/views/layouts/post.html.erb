<!DOCTYPE html>
<html lang="en">
  <%= render "shared/head" %>
  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
  <%= render "blog/header" %>

  <main role="main" class="main main-post">
    <article class="post">
      <!-- Post header -->
      <%= render "blog/posts/header", post: @post %>

      <!-- Post body -->
      <%= yield %>
    </article>

    <!-- Post sharing -->
    <% if Rails.env.production? %>
      <div class="post-sharing">
        <script 
          type="text/javascript" 
          src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-54abd9e605655107" 
          async="async">
        </script>
        <div class="addthis_native_toolbox"></div>
      </div>
    <% end %>

    <!-- Post navigation -->
    <div class="post-nav pure-g">
      <div class="pure-u-1-3 text-left">
        <% if prev_post? %>
          <%= link_to prev_post.url, class: "btn-previous" do %>
            <i class="fa fa-long-arrow-left"></i>Previous
          <% end %>
        <% end %>
      </div>
      <div class="pure-u-1-3">
        <%= link_to "Home", blog_root_path %>
      </div>
      <div class="pure-u-1-3 text-right">
        <% if next_post? %>
          <%= link_to next_post.url, class: "btn-next" do %>
            Next<i class="fa fa-long-arrow-right"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </main>
  
  <%= render "shared/footer" %>
  <%= javascript_include_tag 'application' %>
  </body>
</html>