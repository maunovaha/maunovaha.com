<!DOCTYPE html>
<html lang="en">
  <%= render "shared/head" %>
  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">

  <main role="main" class="main main-<%= controller_name %> pure-g">
    <div class="post pure-u-1">
      <article>
        <!-- Post header -->
        <%= render "blog/post/header", post: @post %>

        <!-- Post body -->
        <%= yield %>
      </article>
    </div>

    <!-- Post sharing -->
    <% if Rails.env.production? %>
      <div class="post-sharing pure-u-1">
        <script 
          type="text/javascript" 
          src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-54abd9e605655107" 
          async="async">
        </script>
        <div class="addthis_native_toolbox"></div>
      </div>
    <% end %>

    <!-- Post navigation -->
    <div class="post-nav pure-u-1">
      <% if prev_post? %>
        <%= link_to prev_post.url, class: "btn-previous" do %>
          <i class="fa fa-long-arrow-left"></i>Previous
        <% end %>
      <% end %>
      <% if next_post? %>
        <%= link_to next_post.url, class: "btn-next" do %>
          Next<i class="fa fa-long-arrow-right"></i>
        <% end %>
      <% end %>
    </div>
  </main>
  
  <%= render "shared/footer" %>
  <%= javascript_include_tag 'application' %>
  </body>
</html>